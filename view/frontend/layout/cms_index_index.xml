<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main.wrapper">
            <container name="homepage.instagram.widget" htmlTag="div" htmlClass="instagram-widget-container" after="-">
                <block class="Magento\Framework\View\Element\Template" name="instagram.widget" template="Bitbull_InstagramWidget::instagram-widget.phtml">
                    <arguments>
                        <argument translate="true" name="title" xsi:type="string">Instagram</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>

</page>
